@model Projet_pfa.ViewModel.FormulaireInscription

@{
    ViewData["Title"] = "FormInscription";
}

<h1>Inscription</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="FormInscription">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prenom" class="control-label"></label>
                <input asp-for="Prenom" class="form-control" />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nationalite" class="control-label"></label>
                <input asp-for="Nationalite" class="form-control" />
                <span asp-validation-for="Nationalite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomUtilisateur" class="control-label"></label>
                <input asp-for="NomUtilisateur" class="form-control" />
                <span asp-validation-for="NomUtilisateur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MotDePasse" class="control-label"></label>
                <input asp-for="MotDePasse" class="form-control" />
                <span asp-validation-for="MotDePasse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmationMotDePasse" class="control-label"></label>
                <input asp-for="ConfirmationMotDePasse" class="form-control" />
                <span asp-validation-for="ConfirmationMotDePasse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
