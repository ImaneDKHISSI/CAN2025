@model Projet_pfa.ViewModel.MatchInformations
@using Projet_pfa.ViewModel
@{
    Layout = "_Layout";
}
@section Style{
    <link rel="stylesheet" href="~/css/StyleMatchInfo.css" />
}



<div class="row">
    <div class="col-md-4 ">
        <form asp-action="MatchInfo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="container-box">
                <h3>Match choisi :</h3>
                <div class="match-info">
                    <div class="match-equipe">
                        <span>
                            <img src="~/@Model.equipe1.Drapeau" width="40px" height="40px"/>
                            @Model.equipe1.Nom
                         </span>
                        <span>Vs</span>
                        <span>
                            <img src="~/@Model.equipe2.Drapeau" width="40px" height="40px" />
                            @Model.equipe2.Nom
                        </span>
                    </div>
                    <div class="match-time">
                        <span><i class="fa-solid fa-calendar-days" ></i><span>@Model.date</span></span>
                        <span><i class="fa-solid fa-location-dot"></i><span>@Model.stade.Ville.Nom</span></span>
                    </div>
                </div>
                <div class="siege-info">
                    <div class="form-group">
                        <label asp-for="CategorieSiege" class="control-label"></label>
                        <select class="form-select" name="CategorieSiege" asp-for="CategorieSiege">
                            <option value="@Categorie.A">@Categorie.A ( Prix : @Model.PrixSiegeCat1 $ )</option>
                            <option value="@Categorie.B">@Categorie.B ( Prix : @Model.PrixSiegeCat2 $ )</option>
                            <option value="@Categorie.C">@Categorie.C ( Prix : @Model.PrixSiegeCat3 $ )</option>
                        </select>
                        <span asp-validation-for="CategorieSiege" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NbrTicket" class="control-label"></label>
                        <select asp-for="NbrTicket" class="form-select" name="NbrTicket">
                            
                            @if(ViewBag.nbrTicketMadeByUser != null)
                            {
                                if (4-ViewBag.nbrTicketMadeByUser == 1)
                                {
                                    <option value="1">1</option>
                                }
                                else if (4 - ViewBag.nbrTicketMadeByUser == 2)
                                {
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                }
                                else if (4 - ViewBag.nbrTicketMadeByUser == 3)
                                {
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                }
                                else if (4 - ViewBag.nbrTicketMadeByUser == 4)
                                {
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                }
                            }
                           
                        </select>
                        <span asp-validation-for="NbrTicket" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        
                        <button type="submit" class="arrow-button">Suivant<span class="arrow"></span></button>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
