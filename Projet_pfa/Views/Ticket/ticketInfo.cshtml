@model Projet_pfa.ViewModel.TicketInformation

@{
    ViewData["Title"] = "ticketInfo";
    Layout = "_Layout";
}
 @section Style{
    <link rel="stylesheet" href="~/css/StyleTicketInfo.css" />
} 




<div class="row">
    <div class="col-md-4">
        <form asp-action="ticketInfo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @for (int i = 0; i < ViewBag.nbrtickets; i++)
            {
                <div class="form-group">
                    @if (ViewBag.Erreur == true )
                    {
                        <label asp-for="NomComplets[i]" class="control-label"><i class="fa-solid fa-user"></i>Bénéficiaire  </label>
                        <input asp-for="NomComplets[i]" required class="form-control" />
                        <span asp-validation-for="NomComplets[i]" class="text-danger">Bénéficiaire est requis</span>
                    }
                    else
                    {
                        <label asp-for="NomComplets[i]" class="control-label"><i class="fa-solid fa-user"></i>Bénéficiaire  </label>
                        <input asp-for="NomComplets[i]" required class="form-control" />
                        <span asp-validation-for="NomComplets[i]" class="text-danger"></span>
                    }
                  
                </div>
            }
            <div class="form-group">
                <button type="submit" class="arrow-button">Suivant<span class="arrow"></span></button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
