@model Projet_pfa.ViewModel.FormulaireAuthentification


@{
    ViewData["Title"] = "FormAuthentification";
     Layout = null;
}
@* @section Style{
    
} *@
<head>
    <link rel="stylesheet" href="~/css/StyleAuthentification.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<body style=" align-items: center; justify-content: center;">
    <div class="login-page">
        <form asp-action="FormAuthentification" asp-controller="Utilisateurs" method="post" >
            <h2>Login</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @* <label asp-for="NomUtilisateur" class="control-label"></label> *@
                <input asp-for="NomUtilisateur" class="form-control NomUtilisateur" placeholder="Login" />
                <span asp-validation-for="NomUtilisateur" class="text-danger" ></span>
            </div>
            <div class="form-group">
                @* <label asp-for="MotDePasse" class="control-label "></label> *@
                <input asp-for="MotDePasse" class="form-control MotDePasse" placeholder="Password" />
                <span asp-validation-for="MotDePasse" class="text-danger"></span>
            </div>
            @if (ViewBag.Exist == false)
            {
                <div class="text-danger ValidationSpan">
                    <span>Cet Utilisateur n'existe pas</span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Se connecter" class="btn btn-primary" />
            </div>
            <div class="form-group InscriptionDiv" >
                <span class="textInscription">Vous n'êtes pas encore Inscrit ?</span><a class="InscriptionHref" asp-action="FormInscription" asp-controller="Utilisateurs"> Inscrivez vous</a>
            </div>
            <div class="form-group">
                <a  asp-action="Index" asp-controller="Accueil">Retourner Vers la Page d'accueil</a>
            </div>
        </form>
        
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

