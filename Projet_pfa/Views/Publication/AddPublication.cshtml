@model Projet_pfa.ViewModel.PublicationAddVM

@{
    ViewData["Title"] = "AddPublication";
}



@{
    Layout = "_Layout";
}
@section Style{
    <link rel="stylesheet" href="~/css/StyleAddPublication.css" />
}


    
<div class="containerAddPublication">
    <div class="container-custum">
        <div class="AddPublication">
            <h3>Ajouter une Publication</h3>
            <div >
                <form asp-action="AddPublication" class="formulaire" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group ">
                        @* <label asp-for="Texte" class="control-label"></label> *@
                        <textarea asp-for="Texte" placeholder="Votre publication ici ..." class="form-control"></textarea>
                        <span asp-validation-for="Texte" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @* <label asp-for="Photo" class="control-label"></label> *@
                        <input asp-for="Photo" class="form-control"></input>
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Ajouter La publication" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            
        </div>
        
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
