@{
    var newsList = ViewBag.NewsList as IEnumerable<Projet_pfa.Models.News>;
}
<div class="d-flex justify-content-center darkblue-background container-fluid " style="max-width:70%;">
    <div id="carouselExampleControls" class="carousel slide hauteur-carousel margin padding blue-background coins-arrondis " data-bs-ride="carousel">
    <h1 style="text-align:center;margin-bottom:20px;"> <a asp-controller="News" asp-action="Index" class="red"> News </a> </h1>
        <div class="carousel-inner">
            @for (int i = 0; i < newsList.Count(); i++)
            {
                var news = newsList.ElementAt(i);
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="img-container">
                                <img src = "~/images/@news.Photo" class="d-block w-100 coins-arrondis" alt="Pas d'image">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center h-100">
                                <div>
                                    <h3 style="color:yellow">@news.Titre</h3>
                                    <p class="text-white">@news.Texte</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
@if(ViewBag.IsAdmin == true)
{
    <div class="d-flex align-items-center justify-content-center ">
        <a class="btn btn-danger" asp-action="GererNews" asp-controller="News">
            Gerer News
        </a>
    </div>
}




