@model Projet_pfa.ViewModel.JoueurAddVM

@{
    ViewData["Title"] = "AddJoueurs";
    Layout = "_Layout";
}


<header>
    <link rel="stylesheet" href="~/css/StyleAddJoueur.css" />
</header>
<h1>Ajouter Joueur</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddJoueurs" method="post" asp-route-id="@ViewBag.EquipeId" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prenom" class="control-label"></label>
                <input asp-for="Prenom" class="form-control" />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroMaillot" class="control-label"></label>
                <input asp-for="NumeroMaillot" class="form-control" />
                <span asp-validation-for="NumeroMaillot" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateNaissance" class="control-label"></label>
                <input asp-for="DateNaissance" class="form-control" />
                <span asp-validation-for="DateNaissance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <input asp-for="Photo" class="form-control" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <select asp-for="Role">
                    <option value="@PosteEnum.Gardien">@PosteEnum.Gardien</option>
                    <option value="@PosteEnum.Défenseur">@PosteEnum.Défenseur</option>
                    <option value="@PosteEnum.Milieu">@PosteEnum.Milieu</option>
                    <option value="@PosteEnum.Attaquant">@PosteEnum.Attaquant</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn2" />
            </div>
        </form>
    </div>
</div>


